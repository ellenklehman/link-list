<div class="row">
	<label for="link_name">Name the Link</label>
	<input id="link_name" class="form-control" name="link[name]" type="text" value="<%= @link.name %>">
	<label for="link_url">Enter the URL for this link</label>
	<input id="link_url" class="form-control" name="link[url]" type="text" value="<%= @link.url %>">
</div>
<br>
<div class="row">
	<label for="link_description">Describe why this link would <br> be useful for your classmates</label>
	<br>
	<textarea id="link_description" name="link[description]" class="form-control" rows="3" type="text"><%= @link.description %></textarea>
</div>
