
<h1><%= @student.name %></h1>

<h4>Here are all the links that <%= @student.name %> has added:</h4>
<p><%= @error %></p>
<ul>
  <% @student.links.each do |link| %>
    <li><a href="/links/<%= link.id %>"> <%= link.name %></a></li>
  <% end %>
</ul>

<h4><a href="/links/new">Add a new link</a></h4>
<br>
<p><a href="/students/<%= @student.id %>/edit">Update this student's name</a></p>
<p><a href="/students/<%= @student.id %>"
      data-confirm="Are you sure you want to delete this student?"
      data-method="delete"
      rel='nofollow'>Delete this student</a></p>

<p><a href="/students">Return to Student's List</a></p>
